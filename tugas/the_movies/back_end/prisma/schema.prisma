datasource db {
  provider = "mysql"          // ganti sesuai database kamu (mysql/postgresql/sqlite)
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Film {
  id          Int      @id @default(autoincrement())    // primary key auto increment
  judul       String                                    // judul film
  kategori    String                                    // genre film (misal: Action, Drama, Comedy)
  tahun       Int                                       // tahun rilis
  
  }
